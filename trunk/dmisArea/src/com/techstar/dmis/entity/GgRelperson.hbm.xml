<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="com.techstar.dmis.entity">
	<class name="GgRelperson" table="DMIS_ZD_GG_relPerson" dynamic-insert="true" dynamic-update="true" optimistic-lock="version">
    <id name="id" type="string">
      <column name="id" sql-type="varchar(40)" not-null="true"/>
      <generator class="assigned"/>
    </id>

 	<version name="version" column="VERSION" unsaved-value="undefined"/>
  
   <property name="name" type="string"  not-null="true">
    <column name="name"  
		length="10"               
    />
</property>	
    <property name="type" type="string"  not-null="true">
    <column name="type"  
		length="10"               
    />
</property>	
    <property name="telephon" type="string"  not-null="true">
    <column name="telephon"  
		length="100"               
    />
</property>	
    <property name="workunit" type="string"  not-null="true">
    <column name="workunit"  
		length="100"               
    />
</property>	
    <property name="address" type="string"  not-null="true">
    <column name="address"  
		length="150"               
    />
</property>	
    <property name="title" type="string"  not-null="true">
    <column name="title"  
		length="10"               
    />
</property>	
    <property name="remark" type="string"  not-null="true">
    <column name="remark"  
		length="300"               
    />
</property>	
    <property name="fmobil" type="string"  not-null="false">
    <column name="fmobil"  
		length="40"               
    />
</property>	
  
</class>

</hibernate-mapping>

